<div class="flex-center flex-col text-white w-full">
	<img
		src="<%= item.poster %>"
		alt="<%= item.title %>"
		class="rounded-[20px] w-full h-full object-cover"
	/>
	<h2
		class="px-[10px] font-bold mt-[10px] text-[20px] w-full h-[40px] text-nowrap overflow-hidden overflow-ellipsis"
	>
		<%= item.title %>
	</h2>
	<div class="flex w-full items-center justify-between px-[10px]">
		<h2 class="text-[17px]"><%= item.imdb %></h2>
		<h2 class="text-[17px]"><%= item.year %></h2>
	</div>
	<% if(item.seasons) { %>
	<h2 class="text-[17px] px-[10px] w-full mt-[8px]">
		<%= item.seasons %> seasons
	</h2>
	<% } %>
	<button
		onclick="deleteMovie(event)"
		type="button"
		class="w-[25px] h-[25px] text-white hover:text-primary"
		data-id="<%= item._id %>"
		data-type="<%= item.seasons ? "series" : "movie" %>"
	>
		<i class="fa-solid fa-trash"></i>
	</button>
</div>
